@model Accomplishment

<!-- ======================= Main Work Area ================================-->

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <a class="text-secondary" asp-action="SubmitAccomplishment"><h1 class="h2">Submit New Accomplishment</h1></a>
    </div>

    <!-- ================== Form ======================-->

    <h2 class="text-center">Course or Training Form</h2><br>
    <div class="container">
        <div class="row">
            <form class="ml-5" asp-action="CourseForm">
                <input type="hidden" asp-for="AchievementType" value="Course" />
                <!--Insert User Session Variable in USERID-->
                <input type="hidden" asp-for="UserID" value="1" />
                <div class="form-group">
                    <label asp-for="Provider" class="control-label"> School/Provider</label>
                    <input asp-for="Provider" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Activity" class="control-label">Course Name/Activity:</label>
                    <input asp-for="Activity" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea rows="5" asp-for="Description" class="form-control"> </textarea>
                    <span class="text-danger"></span>
                </div>

                <label>Start Date: </label>
                <div class="datepicker input-group date" data-date-format="mm-dd-yyyy">
                    <input class="form-control" type="text" asp-for="DateStarted" readonly />
                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                </div>

                <label>End Date: </label>
                <div class="datepicker input-group date" data-date-format="mm-dd-yyyy">
                    <input class="form-control" type="text" asp-for="DateCompleted" readonly />
                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                </div>
                <div class="form-group">
                    <label asp-for="URL" class="control-label"></label>
                    <input asp-for="URL" type="text" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContactPerson" class="control-label"></label>
                    <input asp-for="ContactPerson" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContactPhone" class="control-label"></label>
                    <input asp-for="ContactPhone" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContactEmail" class="control-label"></label>
                    <input asp-for="ContactEmail" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <br>
                <input type="submit" class="btn btn-info" value="Submit"><br>
                <br>
            </form>

        </div><br>
    </div>
    
</main>