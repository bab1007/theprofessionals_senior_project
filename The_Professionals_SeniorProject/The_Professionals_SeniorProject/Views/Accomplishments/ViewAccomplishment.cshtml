<!-- ======================= Main Work Area ================================-->

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <a class="text-secondary" href="myAccomplishments.html"><h1 class="h2">My Accomplishments</h1></a>
    </div>

    <!-- ================== Form ======================-->

    <h2> Detailed View</h2><br>
    <div class="container">
        <h4 class="text-center">Course Or Training</h4><br>
        <div class="row">

            <form class="ml-5" asp-action="#" asp-controller="#">
                <div class="form-group">
                    <label for="school">School/Provider: </label>
                    <input type="text" class="form-control" name="school" id="school" readonly placeholder="University of South Alabama">
                </div>
                <div class="form-group">
                    <label for="activity">Activity: </label>
                    <input type="text" class="form-control" name="activity" id="school" readonly placeholder="Advanced Data Management">
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea class="form-control" rows="5" name="description" id="comment" readonly placeholder=" Describe topics covered in course and how it is relevant to your job."></textarea>
                    <p class="float-right"><i>400 character limit</i></p>
                </div>

                <label>Start Date: </label>
                <div class=" input-group date" data-date-format="mm-dd-yyyy">
                    <input class="form-control" type="text" readonly value="10-10-2010" />
                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                </div>

                <label>End Date: </label>
                <div class=" input-group date" data-date-format="mm-dd-yyyy">
                    <input class="form-control" type="text" readonly value="10-10-2012" />
                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                </div>
                <div class="form-group">
                    <label for="url">URL: </label>
                    <input type="text" class="form-control" name="url" readonly id="url" value="southalabama.edu">
                </div>
                <div class="form-group">
                    <label for="contact">Contact Person: </label>
                    <input type="text" class="form-control" name="contact" readonly id="contact" value="Dr. Dre">
                </div>
                <div class="form-group">
                    <label for="contactPhone">Contact Phone: </label>
                    <input type="text" class="form-control" name="contactPhone" readonly id="contactPhone" value="555-555-5555">
                </div>
                <div class="form-group">
                    <label for="contactEmail">Contact Email: </label>
                    <input type="text" class="form-control" name="contactEmail" readonly id="contactEmail" value="upinsmoke@blah.com">
                </div>
                <br>

                <br>
            </form>

        </div><br>
    </div>
</main>