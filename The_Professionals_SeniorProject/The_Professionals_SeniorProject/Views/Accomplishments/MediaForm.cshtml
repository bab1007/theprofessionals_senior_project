
@model Accomplishment
<!-- ======================= Main Work Area ================================-->

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <a class="text-secondary" asp-action="SubmitAccomplishment"><h1 class="h2">Submit New Accomplishment</h1></a>
    </div>

    <!-- ================== Form ======================-->

    <h2 class="text-center">Online or Digital Media</h2><br>
    <div class="container">
        <div class="row">

            <form class="ml-5" asp-action="MediaForm">

                <input type="hidden" asp-for="AchievementType" value="Media" />
                <!--Insert User Session Variable in USERID-->
                <input type="hidden" asp-for="UserID" value="1" />

                <div class="form-group">
                    <label asp-for="Provider" class="control-label"></label>
                    <input asp-for="Provider" class="form-control" required />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Activity" class="control-label"></label>
                    <input asp-for="Activity" class="form-control" required />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" required />
                    <span class="text-danger"></span>
                </div>

                <label>Start Date: </label>
                <div class=" form-group date" style="width:40%;" data-date-format="mm-dd-yyyy">
                    <input type="date" id="fromDate" class=" form-control" required asp-for="DateStarted" />
                    <span class="text-danger" asp-validation-for="DateStarted"></span>
                </div>

                <label>End Date: </label>
                <div class=" form-group date" style="width:40%;" data-date-format="mm-dd-yyyy">
                    <input type="date" id="fromDate" class="form-control" required asp-for="DateCompleted" />
                    <span class="text-danger" asp-validation-for="DateCompleted"></span>
                </div>

                <div class="form-group">
                    <label asp-for="URL" class="control-label"></label>
                    <input asp-for="URL" class="form-control" />
                    <span class="text-danger"></span>
                </div>

                <input type="submit" class="btn btn-info" value="Submit"><br>
                <br>
            </form>

        </div><br>
    </div>
    
</main>
