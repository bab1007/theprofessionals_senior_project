@model IEnumerable<PMISUser>
 <!-- ======================= Main Work Area ================================-->

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Employee Internal Resumes</h1>
    </div>
    @if (ViewBag.Noresult != null)
    {
    <div class="alert alert-warning alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        @ViewBag.Noresult
    </div>
    }
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Last Name</th>
                        <th>First Name</th>
                        <th>Email</th>
                        <th>View</th>
                        <th>Export</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in @Model)
                    {
                        <tr>
                            <td>@u.Lname</td>
                            <td>@u.Fname</td>
                            <td>@u.Email</td>
                            <td><a class="btn btn-info" asp-action="EmployeeReportResult" asp-route-id="@u.UserID">View Resume</a></td>
                            <td><a class="btn btn-info" asp-action="EmployeeInternalResume" asp-route-id="@u.UserID">Export Resume</a></td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
    <br>
    <br>

    <h3 class="">Select Employee to View Report</h3>
    <div id="ResumeResult"></div>

</main>
