<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The_Professionals_SeniorProject</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link href="~/css/dashboard.css" rel="stylesheet">

</head>
<body>
    <!--===========================  Main Navigation ===================================-->
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0">
        <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">My Account</a>

        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
                <a class="nav-link" href="#">Sign out</a>
            </li>
        </ul>
    </nav>
    <!--================================== Side Navigation ========================-->
    <div class="container-fluid " id="sidenav">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Accomplishments" asp-action="Index">
                                <span data-feather="home"></span>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Accomplishments" asp-action="MyAccomplishments">
                                <span data-feather="award"></span>
                                My Accomplishments
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Accomplishments" asp-action="SubmitAccomplishment">
                                <span data-feather="send"></span>
                                Submit Accomplishment
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Accomplishments" asp-action="InternalResume">
                                <span data-feather="file-text"></span>
                                Internal Resume
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Accomplishments" asp-action="#">
                                <span data-feather="mail"></span>
                                Email Internal Resume
                            </a>
                        </li>
                        <li class="nav-item" >
                            <a class="nav-link" asp-controller="AccountSettings" asp-action="Index">
                                <span data-feather="settings"></span>
                                Account Settings
                            </a>
                        </li>
                    </ul>
                    <br><br>
                    <ul class="nav flex-column">
                        <li class="nav-item ">
                            <span class="nav-link"><u><b>Supervisor Menu</b></u></span>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Supervisor" asp-action="Approvals">
                                <span data-feather="check-circle"></span>
                                Approval Requests
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Supervisor" asp-action="EmployeeReport">
                                <span data-feather="layers"></span>
                                Employee Report
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Supervisor" asp-action="CreateUser">
                                <span data-feather="user-plus"></span>
                                Create New User
                            </a>
                        </li>


                    </ul>
                </div>
            </nav>

            
                @RenderBody()
               

        </div>
    </div>
            <!-- Bootstrap core JavaScript================================================== -->
            <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js" integrity="sha384-kW+oWsYx3YpxvjtZjFXqazFpA7UP/MbiY4jvs+RWZo2+N94PFZ36T6TFkc9O3qoB" crossorigin="anonymous"></script>
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <!-- Icons -->
            <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
            <script>
                feather.replace();
            </script>

          
</body>
</html>
